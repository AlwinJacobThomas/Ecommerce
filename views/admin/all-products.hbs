<section>
  <div class="container  mt-5">
    <div class="row mb-5">
      <a href="/admin/add-product" class="btn btn-primary">Add Product</a>
    </div>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Product Description</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.title}}</td>
          <td>{{this.desc}}</td>
          <td>{{this.category}}</td>
          <td><img src="/product-images/{{this._id}}.jpg" height="200px" alt="img"></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

</section>